  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Web GUI Renderer",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "name": "Web Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/build/**/*.*"],
      "sourceMaps": true
    }
  ]
}
